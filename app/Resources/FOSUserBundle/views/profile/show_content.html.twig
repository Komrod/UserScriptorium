<h1>{{ 'profile.show.profile_of'|trans }} &laquo; {{ user.username }} &raquo;</h1>

<div class="row">
    <div class="col-md-12">
        <div class="us-box profile">
            {{ 'profile.show.text'|trans }}
            <br/><br/>
            <div class="col-md-4 col-sd-12 profile-image">
                <center>
                {% if user.profilePictureFile == null %}
                    <img src="/bundles/userscriptorium/img/default-user.png" width="200" heiht="200" class="picture" />
                {% else %}
                    <img src="{{ user.profilePictureFile }}" class="picture" />
                {% endif %}
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalPictureChange" onclick="usJQueryloader('#modalPictureChangeBody', '/user/picture?format=short');" style="clear: both;">{{ 'profile.btn.picture'|trans }}</button>
                </center>
            </div>
            <div class="col-md-8 col-sd-12 profile-infos">
                <ul>
                    <li>{{ 'profile.show.email'|trans }}: {{ user.email }}</li>
                    <li>{{ 'profile.show.date_registration'|trans }}: {{ user.registrationDate|date('Y-m-d') }}</li>
                    <li>{{ 'profile.show.date_login'|trans }}: {{ user.lastLogin|date('Y-m-d') }}</li>
                </ul>
            </div>
            <div class="clear"></div>
        </div>
    </div>
</div>

<div id="modalPictureChange" class="modal fade in" tabindex="-1" role="dialog" aria-labelledby="modaPictureLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">{{ 'profile.btn.close'|trans }}</span></button>
                <h4 class="modal-title" id="modaPictureLabel">{{ 'profile.btn.change_image'|trans }}</h4>
            </div>
            <div class="modal-body" id="modalPictureChangeBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'profile.btn.close'|trans }}</button>
            </div>
        </div>
    </div>
</div>
