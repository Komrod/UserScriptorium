{# src/scriptorium/UserScriptBundle/Resources/views/layout.html.twig #}
{% extends 'scriptoriumUserScriptBundle::layout.html.twig' %}

{% block javascript %}
    {{ parent() }}
    {% javascripts '@scriptoriumUserScriptBundle/Resources/public/js/form.validation.js' %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
    <script>
    
    formValidation( $('#registrationForm') );

    </script>
{% endblock javascript %}

{% block body %}

<h1>Join the community</h1>
<div class="row">
    <div class="col-md-6 col-sm-12">
        <div class="us-box">
            Create a new account and join the community of script users and developpers!
            <form id="registrationForm" class="form-horizontal" role="form" style="margin-top: 30px;">
                <div class="form-group">
                    <label for="inputEmail" class="col-sm-4 control-label">Screen name</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="inputName" placeholder="Name" data-validate="{min:3,max:30}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail" class="col-sm-4 control-label">Your e-mail</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="inputEmail" placeholder="Email" data-validate="{type:email,max:255}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-4 control-label">Password</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="inputPassword" placeholder="Password" data-validate="{min:6,max:16}">
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputPassword" class="col-sm-4 control-label">Same password again</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" id="inputPasswordAgain" placeholder="Password again" data-validate="{type:equal,to:inputPassword}">
                    </div>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
                        
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div class="us-box">
            If you already have an account:
            <br/><br/>
            <button type="button" class="btn btn-primary" style="margin-bottom: 10px;">Log in</button>
            <button type="button" class="btn btn-primary" style="margin-bottom: 10px;">I Forgot my password</button>
            <button type="button" class="btn btn-primary" style="margin-bottom: 10px;">Send confirmation again</button>
        </div>
    </div>
</div>

{% endblock %}